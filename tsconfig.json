{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "es2018"
    ],
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": ".",
    "outDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "experiments/**/*.ts",
    "examples/**/*.ts"
  ],
  "include": [
    "src"
  ]
}